             xmlns:local="clr-namespace:EditorResources.Windows"
             xmlns:Resources="clr-namespace:EditorResources.Resources" x:Class="EditorResources.Windows.GameMode"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" ResizeMode="NoResize" Icon="pack://siteoforigin:,,,/Flower.png" Title="Game Mode">
