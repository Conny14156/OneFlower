        <Label Content="Player Attributes &amp; Buffs" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,54,0,0"/>
        <ListView HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="231" Margin="10,85,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Enemy Npc Attributes &amp; Buffs" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,190,0,0"/>
        <ListView HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="231" Margin="10,221,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
